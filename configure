}
if (!$openaisincdir) {
  $openaisincdir="${incdir}";
}
if (!$openaislibdir) {
  $openaislibdir="${libdir}/openais";
}
if (!$corosyncbin) {
  $corosyncbin="/usr/sbin/corosync";
}
if (!$zlibincdir) {
  $zlibincdir="${incdir}";
}
if (!$zliblibdir) {
  $zliblibdir="${libdir}";
}
if (!$ldapincdir) {
  $ldapincdir="${incdir}";
